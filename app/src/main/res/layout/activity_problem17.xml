<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:orientation="vertical">


            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
android:text="Write a Java program to find all roots of a quadratic equation using if else. How to find all roots of a quadratic equation using if else in Java programming. Logic to find roots of quadratic equation in Java programming.
\n
Example\n
Input\n
Input a: 8\n
Input b: -4\n
Input c: -2\n\n
Output\n
Root1: 0.80\n
Root2: -0.30"
                />


            <EditText
                android:id="@+id/et_one_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:hint="  Input 1st Number"
               />


            <EditText
                android:id="@+id/et_two_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:hint="  Input 2nd Number"
                />

            <EditText
                android:id="@+id/et_three_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:hint="  Input 3nd Number"
              />

            <TextView
                android:id="@+id/result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Result:"
                android:textColor="@color/colorgreen"
                android:textSize="19sp"
                android:textStyle="bold" />



            <Button
                android:layout_margin="5dp"
                android:id="@+id/sum_btn_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_shape"
                android:text="Submit"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="19sp" />


        </LinearLayout>



    </ScrollView>



</RelativeLayout>